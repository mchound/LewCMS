@using System.Web.Mvc.Html;
@inherits System.Web.Mvc.WebViewPage<LewCMS.BackStage.Models.LoginViewModel>

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lew CMS - Login</title>
    <script src="~/BackStage/LewCMS/Scripts/jquery-2.1.1.min.js"></script>
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:400italic,700italic,400,700,100" rel="stylesheet" type="text/css" />
    <link href="~/BackStage/LewCMS/css/default.min.css" rel="stylesheet" />
    <script src="http://fb.me/react-0.11.2.js"></script>
    <script src="http://fb.me/JSXTransformer-0.11.2.js"></script>
</head>
<body>

    <div data-lew-style="box" class="xs center-v center-h white border">

        <form action="/LewCMS/Dashboard/Login" method="post" data-lew-style="form" novalidate="novalidate">
            
            <fieldset class="clr-alert--txt">
                @Html.ValidationSummary()
            </fieldset>

            <fieldset>
                <label>Email</label>
                <input type="email" value="@(Model == null ? string.Empty : Model.Email)" name="email" />
            </fieldset>

            <fieldset>
                <label>Password</label>
                <input type="password" value="" name="password" />
            </fieldset>

            <fieldset>
                <button type="submit" data-lew-style="button" class="clr-success--bg--hvr">Sign In</button>
            </fieldset>

        </form>

    </div>
    
    <script src="~/BackStage/LewCMS/react/components/page-tree/page-tree.jsx" type="text/jsx"></script>
</body>
</html>

